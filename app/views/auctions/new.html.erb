<h1>New Auction</h1>

<%= form_for :auction, url: auctions_path do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.label :start %><br>
  <%= f.datetime_select :start %>
</p>

<p>
  <%= f.label :end %><br>
  <%= f.datetime_select :end %>
</p>

<p>
  <%= f.label :kwh %><br>
  <%= f.text_field :kwh %>
</p>

<p>
  <%= f.label :mileage %><br>
  <%= f.text_field :mileage %>
</p>

<p>
  <%= f.label :color %><br>
  <%= f.text_field :color %>
</p>

<p>
  <%= f.label :brand %><br>
  <%= f.text_field :brand %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>